{
  "es": {
    "name": "elastic",
    "connector": "elastic",
    "index": "data",
    "hosts": [
      {
        "protocol": "https",
        "host": "search-peerbuds-ql7jgie76k6ul5rzrbj3e2adcm.us-east-1.es.amazonaws.com",
        "port": 443
      }
    ],
    "defaultSize": 100,
    "apiVersion": "5.x",
    "refreshOn": [
      "save",
      "create",
      "updateOrCreate"
    ],
    "log": "trace",
    "requestTimeout": 30000,
    "mappings": [
      {
        "name": "topic",
        "index": "topic",
        "type": "system",
        "properties": {
          "name": {
            "type": "text",
            "analyzer": "autocomplete",
            "search_analyzer": "standard"
          }
        }
      },
      {
        "name": "collection",
        "index": "collection",
        "type": "workshop",
        "properties": {
          "title": {
            "type": "text",
            "analyzer": "autocomplete",
            "search_analyzer": "standard"
          }
        }
      },
      {
        "name": "content",
        "index": "content",
        "type": "online",
        "properties": {
          "title": {
            "type": "text",
            "analyzer": "autocomplete",
            "search_analyzer": "standard"
          }
        }
      },
      {
        "name": "peer",
        "index": "peer",
        "type": "true",
        "properties": {
          "username": {
            "type": "text",
            "analyzer": "autocomplete",
            "search_analyzer": "standard"
          },
          "profiles" : {
            "properties": {
              "first_name": {
                "type": "text",
                "analyzer": "autocomplete",
                "search_analyzer": "standard",
                "copy_to": "full_name"
              },
              "last_name": {
                "type": "text",
                "analyzer": "autocomplete",
                "search_analyzer": "standard",
                "copy_to": "full_name"
              }
            }
          },
          "full_name": {
            "type": "text",
            "analyzer": "autocomplete",
            "search_analyzer": "standard"
          }
        }
      }
    ],
    "settings": {
      "index" : {
        "blocks": {
          "metadata": false,
          "read_only": false
        }
      },
      "number_of_shards": 1,
      "analysis": {
        "filter": {
          "autocomplete_filter": {
            "type":     "edge_ngram",
            "min_gram": 1,
            "max_gram": 20
          }
        },
        "analyzer": {
          "autocomplete": {
            "type":      "custom",
            "tokenizer": "standard",
            "filter": [
              "lowercase",
              "autocomplete_filter"
            ]
          }
        }
      }
    }
  }
}
